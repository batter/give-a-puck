#event
  %h3= @event.title
  .links.prepend-top
    %a{href: '#'} Scoreboard
  .players.prepend-top
    %a{href: "/events/#{@event.id}/players/new"} New Player
    .append-bottom
    - if @players.any?
      %table.list
        %thead
          %th Name
          %th W
          %th L
          %th Win PCT
          %th
          %th
        %tbody
          - @event.players.each do |player|
            %tr
              %td= player.name
              %td.text-center= player.games_won_count
              %td.text-center= player.games_lost_count
              %td.text-center= player.win_pct
              %td
                %a{href: "/events/#{@event.id}/players/#{player.id}"} Edit
              %td
                %a{href: '#'} Suspend
